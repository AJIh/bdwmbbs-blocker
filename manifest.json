{
  "manifest_version": 2,

  "name": "BDWMBBS-BLOCKER",
  "description": "This extension blocks posts of specified users",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "BDWMBBS-BLOCKER"
  },
  "content_scripts": [
    {
      "matches": ["https://bbs.pku.edu.cn/v2/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab", "webNavigation"
  ]
}
